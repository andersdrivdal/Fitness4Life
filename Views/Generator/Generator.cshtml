@model Question

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">Workout Generator</h1>
    </div>
</section>

<form id="GeneratorForm" asp-controller="Generator" asp-action="Generate">
    <div class="Questions">
        <div class="Question">
            <label asp-for="Choice"></label>
        </div>
        <div class="choice">
            <input type="radio" asp-for="Choice" id="Choice1_1" value="STRENGTH">
            <label asp-for="Choice">STRENGTH</label>
        </div>
        
        <div class="choice">
            <input type="radio" asp-for="Choice" class="choice" id="Choice1_2" value="CARDIO">
            <label asp-for="Choice">CARDIO</label>
        </div>
        
        <div class="choice">
            <input type="radio" asp-for="Choice" class="choice" id="Choice1_3 " value="MOBILITY">
            <label asp-for="Choice">MOBILITY</label>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <button id="jquerybtn" class="btn btn-primary">Generate</button>
            </div>
        </div>
    </div>
    

</form>

<div id="content">
    <p></p>
</div>

@section Scripts
{
    <script>
    $(function()
    {
        // Hook up the click handler
        $('#jquerybtn').click(function()
        {
            $("#content").load("Generator/Generate", $('#GeneratorForm').serialize());
            
            return false;
        });
    });

</script>
}